{% extends 'base.html.twig' %}

{% block title %}Perfil_SES{% endblock %}

{% block body %}
<div>
<table class="table table-hover">
<div><h4>Datos de Jugador</h4>
  <thead>
    <tr>
      <th scope="col">foto de perfil</th>
      <th scope="col">mail</th>
      <th scope="col">usuario</th>
      <th scope="col">equipo</th>
    </tr>
  </thead>
  <tbody>

    <tr class="table-info">
    {% if users  %}
      {% for user in users %}
        <td>{#imagen#}</td>
        <td>{{user.email}}</td>
        <td>{{user.username}}</td>
        <td>{#user.equipo#}</td>
      {% endfor %}
    {% else %}
      <td>no data</td>
      <td>no data</td>
      <td>no data</td>
      <td>no data</td>
      <td>no data</td>
    {% endif %}
    </tr>
  </tbody>
</table> 
<table class="table table-hover">
<div><h4>Stats</h4>
  <thead>
    <tr>
      <th scope="col">rating</th>
      <th scope="col">campeontatos apuntado</th>
      <th scope="col">campeonatos ganados</th>
      <th scope="col">victorias</th>
      <th scope="col">sanciones</th>
    </tr>
  </thead>
  <tbody>

    <tr class="table-info">
    {% if users  %}
        {% for user in users %}
      <td>{#user.rating#}</td>
      <td>{{user.competicionesapuntado}}</td>
      <td>{{user.competicionesganadas}}</td>
      <td>{{user.victorias}}</td>
      <td>{#user.sanciones#}</td>
        {% endfor %}
    {% else %}
      <td>no data</td>
      <td>no data</td>
      <td>no data</td>
      <td>no data</td>
      <td>no data</td>
    {% endif %}
    </tr>
  </tbody>
</table> 

